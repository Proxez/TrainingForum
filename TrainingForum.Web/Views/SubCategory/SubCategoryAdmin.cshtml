@model CategoryViewModel


@foreach (var subCategory in Model.SubCategories)
{
    <div style="display:flex; flex-direction:row; ">
        <h2 style="color:black">@subCategory.Title</h2>
        <a style="margin:0.5rem;" asp-controller="SubCategory" asp-action="DeleteSubCategory" asp-route-id="@subCategory.Id"><button>Delete</button></a>
        <a style="margin:0.5rem;" asp-controller=" SubCategory" asp-action="UpdateSubCategory" asp-route-id="@subCategory.Id"><button>Update</button></a>
    </div>
}
