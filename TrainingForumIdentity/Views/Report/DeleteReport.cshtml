@model Report
@{
    ViewData["Title"] = $"Ta bort rapport #{Model.Id}";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Är du säker på att du vill ta bort den här rapporten?
</div>

<dl class="row">
    <dt class="col-sm-3">Id</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Mål</dt>
    <dd class="col-sm-9">@Model.TargetType #@Model.TargetId</dd>

    <dt class="col-sm-3">Reason</dt>
    <dd class="col-sm-9">@Model.Reason</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Avbryt</a>
</form>