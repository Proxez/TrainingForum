@using Enums
@model Report
@{    
    ViewData["Title"] = $"Redigera rapport #{Model.Id}";
    @if (TempData["Message"] is string msg)
    {
        <div class="alert alert-info">@msg</div>
    }
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Report" asp-action="UpdateReport" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Mål</label>
        <div class="form-control-plaintext">
            @Model.TargetType #@Model.TargetId
        </div>
        <input type="hidden" asp-for="TargetType" />
        <input type="hidden" asp-for="TargetId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Rapporterad av</label>
        <div class="form-control-plaintext">@Model.ReporterUserId</div>
        <input type="hidden" asp-for="ReporterUserId" />
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label"></label>
        <textarea asp-for="Reason" class="form-control" rows="4" maxlength="500"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<ReportStatus>()" class="form-select"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="ResolvedByUserId" class="form-label"></label>
            <input asp-for="ResolvedByUserId" class="form-control" />
            <span asp-validation-for="ResolvedByUserId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ResolveAt" class="form-label"></label>
            <input asp-for="ResolveAt" type="datetime-local" class="form-control" />
            <span asp-validation-for="ResolveAt" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <div class="mb-3">
        <label class="form-label">Skapad</label>
        <div class="form-control-plaintext">@Model.CreateAt.LocalDateTime</div>
        <input type="hidden" asp-for="CreateAt" />
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Spara</button>
        <a asp-controller="Report" asp-action="ViewReports" class="btn btn-secondary">Avbryt</a>
    </div>
</form>